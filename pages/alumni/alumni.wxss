.page {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.custom-image {
    height: 50rpx;
    width: 200rpx;
}

.example-search {
    background-color: #fff;
    padding: 16rpx 32rpx;
}

.example-search:not(:last-child) {
    margin-bottom: 32rpx;
}

.alumniPage {
    margin-left: 40rpx;
    margin-right: 40rpx;
}

.subtotalText {
    font-size: 20rpx;
    color: rgb(92, 90, 90);
    position: absolute;
    top: 70%;
    line-height: 0;
}

.subtotal {
    padding-left: 30rpx;
    /* background-color: aqua; 测试 */
    position: relative;
    height: 50rpx;
}

.activityCount {
    padding-left: 10rpx;
    font-size: 24rpx;
    color: #666;

}

.peopleCount {
    padding-left: 10rpx;
    font-size: 24rpx;
    color: #666;
}


.organisationalChoices {
    padding-left: 40rpx;
    display: flex;
    align-items: center;
    background-color: rgba(228, 233, 230, 0.301);
}

.scroll-view {
    width: 100%;
    height: 70rpx;
    overflow-x: auto;
    white-space: nowrap;
}

.scroll-content {
    display: flex;
}

.scroll-item {
    font-size: 26rpx;
    padding: 0 10rpx;
    white-space: nowrap;
    display: inline-block;
    margin-right: 40rpx;
    cursor: pointer;
    text-align: center;
    position: relative;
    line-height: 60rpx;
    vertical-align: middle;
}

.selected::after {
    /* 下划线设置 */
    content: '';
    display: block;
    width: calc(100% - 20px);
    height: 4rpx;
    background-color: rgb(16, 0, 239);
    position: absolute;
    bottom: 2rpx;
    left: 50%;
    transform: translateX(-50%);
}

.scroll-text {
    color: black;
}

.selected .scroll-text {
    color: rgb(16, 0, 239);
}

