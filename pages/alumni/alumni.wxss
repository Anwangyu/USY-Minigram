.selected {
    color: rgb(16, 0, 239);

}

.organisation-name {
    font-weight: bold;
    font-size: 32rpx;
    color: #333;
}

.activities {
    font-size: 24rpx;
    color: #666;
}

.sum-people {
    font-size: 24rpx;
    color: #666;
}


.actSum {
    display: flex;
    align-items: center;
}

.actsumSpace {
    margin: 0 30rpx;
}

.organisation-image {
    width: 120rpx;
    height: 120rpx;
    margin-right: 10px;
}

.image-container {
    /* 校友组织左侧图片 */
    display: inline-block;
    width: 120rpx;
    height: 160rpx;
    margin-right: 10px;
}

.item-content {
    display: inline-block;
    vertical-align: top;
}

.organisation-item {
    margin-top: 20rpx;
    position: relative;
}

.joinButton {
    font-size: 12px;
    width: auto;
    height: auto;
    position: absolute;
    top: 15%;
    right: 10px;

}